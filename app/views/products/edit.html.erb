
<div class="container">

<h1>Please fill in the form below</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>

  <div>
    <%= label_tag :style%>
    <%= text_field_tag :style, @product.style %>
  </div>

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price  %>
  </div>

    <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image  %>
  </div>

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>

  <div>
    <%= label_tag :stock %>
    <%= text_field_tag :stock, @product.stock  %>
  </div>

  <div>
    <%= label_tag :supplier_id %>
    <%= text_field_tag :supplier_id, @product.supplier_id %>
  </div>

  <div>
    <%= submit_tag 'Submit' %>
  </div>

<% end %>

</div>