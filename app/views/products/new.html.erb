

<% @product.errors.full_messages.each do |error| %>
  <h3><%= error %></h3>
<% end %>


<div class="container">

<h1>Please fill in the form below</h1>

<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>

  <div>
    <%= label_tag :stock %>
    <%= text_field_tag :stock, @product.stock %>
  </div>

  <div>
    <%= submit_tag 'Submit' %>
  </div>

<% end %>

</div>