<div class="container">

<h1>Please fill in the form below</h1>

<%= form_tag '/supplier', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :phone %>
    <%= text_field_tag :phone %>
  </div>

  <div>
    <%= submit_tag 'Submit' %>
  </div>

<% end %>

</div>