    <section>
     <div class="container">

      <div class="row">

        <% @products.each do |product| %>

          <div class="col-sm-4">
            <div class="product_single">
              <a href="/products/<%= product.id %>" title="View Product"><h2><%= product.name %></h2></a>
              <% product.categories.each do |category| %>
              <%= category.name %>
              <% end %>
                <div class="photo">
             <a href="/products/<%= product.id %>" title="View Product"><img src="<%= product.image_preview_url %>" alt="<%= product.name %>" class="img-responsive product_single_image"></a>
                </div>
              <p>Price: <%= number_to_currency(product.price) %></p>
              <p>Description: <%= product.description %></p>
            </div>
          </div>
        <% end %>

      </div>
      </div>
    </section>

<p><%= @test_token %></p>
<p><%= @test_secret %></p>

